<!--Para poder acceder a la entidad de contacto-->
@model GestionRestaurantes.Models.Pedido
@{
    ViewData["Title"] = "Editar pedido";
}

<h1 class="text-center"> Editar pedido</h1>


<!--Carta con los contactos-->
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <!--header de la carta-->
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Editar pedido</strong></h3>
                <script>

                </script>

            </div>
            <!--Body de la carta-->
            <div class="card-body">
                <form asp-action="Edit" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!--Label y input de nombre-->
                    <div class="form-group">
                        <label asp-for="Nombre_Cliente" class="control-label"></label>
                        <input asp-for="Nombre_Cliente" class="form-control" placeholder="Ingresar el nombre" />
                        <span asp-validation-for="Nombre_Cliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Orden" class="control-label"></label>
                        <input asp-for="Orden" class="form-control" placeholder="Ingresar el nombre" />
                        <span asp-validation-for="Orden" class="text-danger"></span>
                     </div>
                    <div class="form-group">
                        <label asp-for="MesaId" class="control-label"></label>
                        <select asp-for="MesaId" class="form-control">
                            @foreach (var item in @ViewBag.Mesa)
                            {
                                <option value="@item.Id">
                                    @item.Numero_Mesa
                                </option>
                            }
                        </select>
                    </div>

                    <!--Btn enviar datos-->
                    <div class="form-floating mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi bi-pencil-fill">Editar Restaurante</i></button>
                    </div>
                </form>
                <a asp-controller="Restaurante" asp-action="Index">Regresar</a>

            </div>
        </div>
    </div>
</div>


