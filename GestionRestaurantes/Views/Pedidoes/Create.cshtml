@model GestionRestaurantes.Models.Pedido

@{
    ViewData["Title"] = "Crear Restaurante";
}

<h1>Create</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class=" card-header bg-dark">
                <h4 class="text-warning"><strong>Crear Mesa</strong></h4>
            </div>

        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nombre_Cliente" class="control-label"></label>
                    <input asp-for="Nombre_Cliente" class="form-control" placeholder="Ingrese el nombre" />
                    <span asp-validation-for="Nombre_Cliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Orden" class="control-label"></label>
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el nombre" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MesaId" class="control-label"></label>
                    <select asp-for="MesaId" class="form-control">
                        @foreach (var item in @ViewBag.Mesa)
                        {
                            <option value="@item.Id">
                                @item.Numero_Mesa
                            </option>
                        }
                    </select>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" id="enviar" class="btn btn-secondary d-block mx-auto"><i class="bg-info bi-person-fill"></i> Crear </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
